{
	"compilerOptions": {
		"target":"es6",
		"declaration":true,
		"declarationDir": "./dist",
		"module":"ES2015", //never ever change this!!
		                   //build process does not work properly with different value
		"noImplicitAny": true,
		"outDir":"./tsc-build",
		"strict":true
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
